- if @user.errors.any?
  %p.error= @user.errors.full_messages.first

= form_for @user do |f|
  = f.label :name
  = f.text_field :name
  %br
  = f.label :email
  = f.text_field :email
  %br
  = f.label :password
  = f.password_field :password
  %br
  = f.label :password_confirmation
  = f.password_field :password_confirmation
  %br
  = f.label :role
  = f.select :role, @user.roles
  %br
  = f.submit "Create new user", :disable_with => 'Submiting...'
  
  
